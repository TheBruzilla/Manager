{%- comment -%}
Simplified header with navigation menu drawer for mobile, optimized for both desktop and mobile.
{%- endcomment -%}

<style>
  :root {
    --header-background-color: #000000; /* Adjust as per your brand colors */
    --header-text-color: #ffffff;
    --header-hover-color: #f9a825; /* Highlight color */
  }

  .custom-header {
    background-color: var(--header-background-color);
    color: var(--header-text-color);
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 15px 30px;
    position: sticky;
    top: 0;
    z-index: 1000;
  }

  .custom-header__logo {
    max-width: 150px;
  }

  .custom-header__nav {
    display: flex;
    gap: 20px;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .custom-header__nav a {
    color: var(--header-text-color);
    text-decoration: none;
    font-weight: bold;
    transition: color 0.3s ease;
  }

  .custom-header__nav a:hover {
    color: var(--header-hover-color);
  }

  .custom-header__icons {
    display: flex;
    gap: 15px;
  }

  .custom-header__icons a {
    color: var(--header-text-color);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .custom-header__icons a:hover {
    color: var(--header-hover-color);
  }

  .custom-header__menu-button {
    display: none;
    background: none;
    border: none;
    color: var(--header-text-color);
    font-size: 24px;
    cursor: pointer;
  }

  .custom-header__drawer {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: var(--header-background-color);
    color: var(--header-text-color);
    padding: 30px;
    z-index: 1001;
    overflow-y: auto;
  }

  .custom-header__drawer.open {
    display: block;
  }

  .custom-header__drawer ul {
    list-style: none;
    padding: 0;
  }

  .custom-header__drawer ul li {
    margin: 15px 0;
  }

  .custom-header__drawer ul li a {
    color: var(--header-text-color);
    text-decoration: none;
    font-size: 18px;
    font-weight: bold;
  }

  @media (max-width: 768px) {
    .custom-header {
      flex-wrap: wrap;
      justify-content: space-between;
    }

    .custom-header__menu-button {
      display: block;
    }

    .custom-header__nav {
      display: none;
    }

    .custom-header__drawer ul li a {
      font-size: 16px;
    }
  }
</style>

<header class="custom-header">
  <!-- Logo -->
  <div class="custom-header__logo">
    <a href="{{ routes.root_url }}">
      <img src="{{ section.settings.logo | image_url: width: 300 }}" alt="{{ shop.name }} Logo" width="150" height="50">
    </a>
  </div>

  <!-- Navigation (Desktop) -->
  <nav>
    <ul class="custom-header__nav">
      {%- for link in section.settings.menu.links -%}
        <li>
          <a href="{{ link.url }}" {% if link.current %}aria-current="page"{% endif %}>{{ link.title }}</a>
        </li>
      {%- endfor -%}
    </ul>
  </nav>

  <!-- Menu Button (Mobile) -->
  <button class="custom-header__menu-button" aria-label="Toggle menu" onclick="document.querySelector('.custom-header__drawer').classList.toggle('open')">
    &#9776;
  </button>

  <!-- Icons -->
  <div class="custom-header__icons">
    <a href="{{ routes.search_url }}" aria-label="Search">
      {%- render 'icon', name: 'search' -%}
    </a>
    <a href="{{ routes.cart_url }}" aria-label="Cart">
      {%- render 'icon', name: 'cart' -%}
    </a>
  </div>

  <!-- Drawer (Mobile Navigation) -->
  <div class="custom-header__drawer">
    <button class="custom-header__menu-button" aria-label="Close menu" onclick="document.querySelector('.custom-header__drawer').classList.toggle('open')">
      &times;
    </button>
    <ul>
      {%- for link in section.settings.menu.links -%}
        <li>
          <a href="{{ link.url }}" {% if link.current %}aria-current="page"{% endif %}>{{ link.title }}</a>
        </li>
      {%- endfor -%}
    </ul>
  </div>
</header>

{% schema %}
{
  "name": "Header Drawer",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo Image",
      "info": "Upload your logo here."
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Navigation Menu",
      "default": "main-menu"
    }
  ]
}
{% endschema %}
